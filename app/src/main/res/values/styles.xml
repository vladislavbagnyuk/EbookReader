<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BookCardView" parent="CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="cardCornerRadius">8.05dp</item>
        <item name="cardElevation">10dp</item>
        <item name="layout_constraintDimensionRatio">1:1.6</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="BookImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/Theme.EbookReader.AppBarOverlay</item>
        <item name="android:stateListAnimator">@animator/appbar_always_elevated</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="theme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>

    <style name="ToolbarButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="TextSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/source_serif_pro_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarText" parent="TextSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>