<?xml version = "1.0" encoding = "utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingHorizontal="10dp"
        android:paddingVertical="13dp"
        android:paddingBottom="13dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cover"
            style="@style/BookCardView"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:paddingHorizontal="8sp"
                    android:text="Osudy dobrého vojáka Švejka za světové války"
                    android:textAlignment="center"
                    android:textColor="@color/black_900"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:text="Jaroslav Hašek"
                    android:textAlignment="center"
                    android:textColor="@color/black_900"
                    android:textSize="13sp"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/source_serif_pro_semi_bold"
            android:textAlignment="center"
            android:textColor="@color/black_900"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/cv_cover" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
